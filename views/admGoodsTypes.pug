extends layout
block css
  link(rel="stylesheet" type="text/css" href="/styles/admin.css")
block scripts
  script(src="/scripts/admGoodsTypes.js")
block content
  body
    section
      div#back
        a(href="/admin" title="На страницу администрирования" rel="prev")
          img(src="/images/back.png" alt="назад")
          span Назад
      div.title= title
      div#menuButtons
        div
          button#saveGoodsTypes(type="button" title="Сохранить")
            img(src="/images/save.png" alt="Сохранить")
        div
          button#newGoodsType(type="reset" title="Новая запись")
            img(src="/images/new.png" alt="Новая запись")
      div#board
        table.center
          tbody#goodsTable
            tr(id="type-0" hidden="hidden")
              td
                input( name="name" size="20")
              td
                input(type="checkbox" name="delete")
            tr
              th Название
              th Удалить
            each row in rows
              tr(id="type-"+row.id)
                td
                  input(value=row.name name="name" size="20")
                td
                  input(type="checkbox" name="delete" value=row.id)
