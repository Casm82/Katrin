extends layout
block css
  link(rel="stylesheet" type="text/css" href="/styles/shop.css")
block content
  body
    section
      div#back
        a(href="/#goods" title="На главную страницу" rel="prev")
          img(src="/images/back.png")
          span Назад
      div.title= title
      table#goods
        each row in rows
          tr
            td
              if (row.photo)
                img(src="/images/goods/" + row.photo alt="фотография" width="128" heigth="128")
              else
                span фотография
            td
              div.name= row.name
              div.desc= row.description
            td.num
              span= row.bulk
              span &nbspмл.
            td.num
              span= row.price
              span &nbsppуб.
