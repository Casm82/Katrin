extends layout
block css
  link(rel="stylesheet" type="text/css" href="/styles/index.css")
block scripts
  script(src="/scripts/index.js")
block content
  nav
    table
      tr
        td.navText(data-nav="main") Главная
        td
          input(type="radio" name="navRadio" data-nav="main")
      tr
        td.navText(data-nav="services") Услуги
        td
          input(type="radio" name="navRadio" value="services" data-nav="services")
      tr
        td.navText(data-nav="masters") Мастера
        td
          input(type="radio" name="navRadio" value="masters" data-nav="masters")
      tr
        td.navText(data-nav="reviews") Отзывы
        td
          input(type="radio" name="navRadio" value="reviews" data-nav="reviews")
      tr
        td.navText(data-nav="goods") Товары
        td
          input(type="radio" name="navRadio" value="goods" data-nav="goods")
      tr
        td.navText(data-nav="contacts") Контакты
        td
          input(type="radio" name="navRadio" value="contacts" data-nav="contacts")
  header#main
    div#headerCenter
      div#logo
        img(src="/images/logo.png" alt="логотип")
      div#signboard
        div#nameTxt Кэтрин
        div#nameFrame
      div#buttons
        div#aboutShow О нас
        div#aboutTxt.invisible
          div.btnClose
            img(src="/images/close.png" alt="Закрыть")
          div
            strong Добро пожаловать!
          p Рады приветствовать Вас на сайте нашего салона красоты Кэтрин! Наша команда квалифицированных специалистов готова прийти на помощь Вам с любыми внешними преображениями, даже самыми смелыми. На сайте Вы можете ознакомиться с услугами и их стоимостью, просмотреть представленный в салоне перечень профессиональной косметики, которую можно приобрести в салоне, а так же записаться онлайн на любую услугу.
          p Ждем вас в салоне красоты Кэтрин!
        div#enrollment
          a(href="/enrollment") Онлайн запись
  section#services
    div#servicesGrid
      div.sericeRow
        a(href="/#goods")
          div.sericePink Уход
          div
            img(src="/images/care.jpg")
        a(href="/price/face")
          div.sericeBlack Лицо
          div
            img(src="/images/face.jpg")
      div.sericeRow
        a(href="/price/hair")
          div
            img(src="/images/hair.jpg")
          div.sericeBlack Волосы
        a(href="/price/nails")
          div
            img(src="/images/nails.jpg")
          div.sericePink Ногти
  section#masters
    div#mastersGrid
      each master,idx in masters
        -var cellClass = (idx%2)?"rightCell":"leftCell"
        div.masterCell(class=cellClass)
          div
            img(src="/images/masters/" + master.id + ".jpg" alt="фотография" width="222" heigth="222")
          div.masterDescription
            div.masterName= master.name
            div.masterHr
            div.masterTitle= master.title
            div.masterGalery
              a(href="/gallery/" + master.id) Галерея работ
  section#reviews
    div#reviewsTable
      div.title Отзывы
      each row in feedbacks
        div
          strong= row.name
          span :&nbsp
          span= row.message
    div#feedbackShow Оставить отзыв
    div#feedbackTxt.invisible
      div.btnClose
        img(src="/images/close.png" alt="Закрыть")
      div#feedbackInput
        div
          input(type="text" id="fb_name" placeholder="Имя" maxlength="150")
        div
          input(type="email" id="fb_email" placeholder="E-mail" maxlength="150")
        div
          input(type="tel" id="fb_tel" placeholder="Телефон" maxlength="150")
        div
          input(type="text" id="fb_title" placeholder="Тема сообщения" maxlength="5000")
        textarea(id="fb_message" placeholder="Сообщение")
      input#submitFeedback(type="submit" value="Отправить")
    div#feedbackResult.invisible Спасибо за отзыв!
  section#goods
    table#goodsTable
      caption.title Товары
      tr
        th
          a(href="/shop/organic" title="Товары Organic") Organic
        th
          a(href="/shop/matrix" title="Товары Matrix") Matrix
        th
          a(href="/shop/kapous" title="Товары Kapous") Kapous
      tr
        td
          a(href="/shop/organic" title="Товары Organic")
            img(src="/images/goods_organic.jpg")
        td
          a(href="/shop/matrix" title="Товары Matrix")
            img(src="/images/goods_matrix.jpg")
        td
          a(href="/shop/kapous" title="Товары Kapous")
            img(src="/images/goods_organic.jpg")
  section#contacts
    div#address
      div.title Приходите
      p р-н Наговицынский, д.4, г. Можга, Россия
      p
        a(href="mailto:katrin@yandex.ru") katrin@yandex.ru
      div +7 (912) 006 53 50
      div +7 (950) 833 15 05
      p ЧАСЫ РАБОТЫ
      div ПН—ПТ : 10:00—19:00
      div СБ—ВС : 10:00–17:00
      div#questionForm Задать вопрос
        div#questionInput
          div#questionSender
            div
              input(type="text" id="q_name" placeholder="Имя" maxlength="150")
            div
              input(type="email" id="q_email" placeholder="E-mail" maxlength="150")
            div
              input(type="tel" id="q_tel" placeholder="Телефон" maxlength="150")
          div#questionMessage
            textarea(id="q_message" placeholder="Сообщение" maxlength="5000")
        input#submitQuestion(type="submit" value="Отправить")
      div#questionResult.invisible
        div Ваш вопрос отправлен.
        div Мы ответим на него как прочитаем.
