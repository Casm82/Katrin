extends layout
block css
  link(rel="stylesheet" type="text/css" href="/styles/admin.css")
block scripts
  script(src="/scripts/admClients.js")
block content
  body
    section
      div#back
        a(href="/admin" title="На страницу администрирования" rel="prev")
          img(src="/images/back.png" alt="назад")
          span Назад
      div.title= title
      div#menuButtons
        div
          button#saveList(type="button" title="Сохранить")
            img(src="/images/save.png" alt="Сохранить")
        div
          button#newClient(type="reset" title="Новая запись")
            img(src="/images/new.png" alt="Новая запись")
      div#board
        table.center
          tbody#clientsTable
            tr(id="client-0" hidden="hidden")
              td
                input(name="name" size="30")
              td
                input(name="tel" size="10")
              td
                input(name="email" size="15")
              td
                input(type="checkbox" name="delete")
            tr
              th Имя
              th Телефон
              th E-mail
              th Удалить
            each row in rows
              tr(id="client-"+row.id)
                td
                  input(value=row.name name="name" size="30")
                td
                  input(value=row.tel name="tel" size="10")
                td
                  input(value=row.email name="email" size="15")
                td
                  input(type="checkbox" name="delete" value=row.id)
